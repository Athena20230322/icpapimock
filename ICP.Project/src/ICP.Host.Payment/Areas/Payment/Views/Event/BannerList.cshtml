@using ICP.Modules.Mvc.Payment.Models.Event.Banner;
@model List<ListBannerRes>
@if (Model.Count == 0)
{
    Html.RenderPartial("~/Areas/Payment/Views/Shared/NoData.cshtml");
}
else
{
    foreach (var item in Model)
    {
        <li style="background-image:url('@item.ImagePath');background-size:100% 100%">
            @if (item.IsUseContent == 0)
            {
                <a href="@item.UrlLink" target="@(item.OpenNewWindow == 0 ? "" : "_blank")"></a>
            }
            else
            {
                <a href="@Url.Action("BannerContent", new { id = item.BannerID })"></a>
            }
        </li>
    }
}