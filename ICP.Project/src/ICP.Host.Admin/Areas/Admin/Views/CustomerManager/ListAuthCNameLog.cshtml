@using ICP.Modules.Mvc.Admin.Models.CustomerManager
@model List<AuthCNameListLogVM>
@{    
    if (Request.IsAjaxRequest())
    {
        Layout = "~/Areas/Admin/Views/Shared/_LayoutForAjax.cshtml";
    }
}
<div id="name-modifyrec-popup"  class="name-modifyrec-popup edit-ac-popup mg-popup mfp-with-anim">
    <div class="pp-container">

        <div class="pp-content">
            <h4 class="pp-title">姓名修改記錄</h4>

            <div class="pp-table pt-name-rec">
                <div class="pp-table-header">
                    <ul>
                        <li><p class="pth-txt">原姓名</p></li>
                        <li><p class="pth-txt">修改後姓名</p></li>
                        <li><p class="pth-txt">修改時間</p></li>
                        <li><p class="pth-txt">操作人</p></li>
                    </ul>
                </div>
                <div class="pp-table-body">
                    <table>
                        <colgroup>
                            <col>
                            <col>
                            <col>
                            <col>
                        </colgroup>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.OCName</td>
                                        <td>@item.CName</td>
                                        <td>@item.CreateDate</td>
                                        <td>@item.CreateUser</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4">查無資料</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>


    </div>
</div>