@using ICP.Modules.Mvc.Admin.Models.CustomerManager
@model List<AuthCellPhoneListLogVM>
@{    
    if (Request.IsAjaxRequest())
    {
        Layout = "~/Areas/Admin/Views/Shared/_LayoutForAjax.cshtml";
    }
}
<div id="mobile-modifyrec-popup"  class="mobile-modifyrec-popup edit-ac-popup mg-popup mfp-with-anim">
    <div class="pp-container">

        <div class="pp-content">
            <h4 class="pp-title">手機號碼修改記錄</h4>

            <div class="pp-table pt-mobile-rec">
                <div class="pp-table-header">
                    <ul>
                        <li><p class="pth-txt">原手機號碼</p></li>
                        <li><p class="pth-txt">修改後手機號碼</p></li>
                        <li><p class="pth-txt">修改時間</p></li>
                        <li><p class="pth-txt">修改原因</p></li>
                        <li><p class="pth-txt">操作人</p></li>
                    </ul>
                </div>
                <div class="pp-table-body">
                    <table>
                        <colgroup>
                            <col>
                            <col>
                            <col>
                            <col>
                            <col>
                        </colgroup>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.OCellPhone</td>
                                        <td>@item.CellPhone</td>
                                        <td>
                                            @string.Format("{0:yyyy/MM/dd}", item.CreateDate)<br />
                                            @string.Format("{0:HH:mm:ss}", item.CreateDate)
                                        </td>
                                        <td>@item.Note</td>
                                        <td>@item.CreateUser</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5">查無資料</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>


    </div>
</div>