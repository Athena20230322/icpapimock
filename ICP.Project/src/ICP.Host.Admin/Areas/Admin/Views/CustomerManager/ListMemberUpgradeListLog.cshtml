@using ICP.Modules.Mvc.Admin.Models.CustomerManager
@model List<AuthMemberUpgradeListLogVM>
@{    
    if (Request.IsAjaxRequest())
    {
        Layout = "~/Areas/Admin/Views/Shared/_LayoutForAjax.cshtml";
    }
}
<div id="upgrade-history-popup"  class="upgrade-history-popup edit-ac-popup mg-popup mfp-with-anim">
    <div class="pp-container">

        <div class="pp-content">
            <h4 class="pp-title">電支使用者升級歷程</h4>

            <div class="pp-table pt-upgrade-history">
                <div class="pp-table-header">
                    <ul>
                        <li><p class="pth-txt">電支帳號</p></li>
                        <li><p class="pth-txt">姓名</p></li>
                        <li><p class="pth-txt">身分證字號/統編</p></li>
                        <li><p class="pth-txt">E-mail</p></li>
                        <li><p class="pth-txt">手機號碼</p></li>
                        <li><p class="pth-txt">轉換類別</p></li>
                        <li><p class="pth-txt">轉換狀態</p></li>
                        <li><p class="pth-txt">記錄時間</p></li>
                    </ul>
                </div>
                <div class="pp-table-body">
                    <table>
                        <colgroup>
                            <col>
                            <col>
                            <col>
                            <col>
                            <col>
                            <col>
                            <col>
                            <col>
                        </colgroup>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ICPMID</td>
                                        <td>@item.CName</td>
                                        <td>@item.IDNO</td>
                                        <td>@item.CellPhone</td>
                                        <td>@item.Email</td>
                                        <td>@( (item.LevelID==12)? "一類會員" : (item.LevelID == 13) ? "二類會員":"-" )</td>
                                        <td>@( (item.UpgradeStatus==1)? "成功" : "失敗" )</td>
                                        <td>@item.CreateDate</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7">查無資料</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>


    </div>
</div>