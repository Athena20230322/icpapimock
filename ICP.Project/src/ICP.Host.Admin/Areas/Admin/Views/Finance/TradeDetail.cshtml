@using ICP.Modules.Mvc.Admin.Models.Finance.TradeDetail;
@model QryTradeDetailReq
@section header{
    <link href="~/Areas/Admin/Content/css/finance.css" rel="stylesheet" />
}

    <div class="sc-box no-edge">
        @using (Ajax.BeginForm("ListTradeDetail", "Finance", null, new AjaxOptions { UpdateTargetId = "queryResult" }, new { id = "queryForm" }))
        {
            <div class="scb-form sf-2column">
                <dl>
                    <dt>
                        <label class="def-select">
                            @Html.DropDownListFor(m => m.DateType, Model.DateTypeList)
                        </label>
                    </dt>
                    <dd class="sbf-date-box">
                        <label class="sdb-item sdb-date">
                            @Html.TextBoxFor(m => m.DateStart, new { @class = "flatpickr flatpickr-input active minD", placeholder = "起始日期", @readonly = "readonly" })
                        </label>
                        <span class="sdb-txt">至</span>
                        <label class="sdb-item sdb-date">
                            @Html.TextBoxFor(m => m.DateEnd, new { @class = "flatpickr flatpickr-input active maxD", placeholder = "結束日期", @readonly = "readonly" })
                        </label>
                    </dd>
                </dl>
                <dl>
                    <dt class="oneline-inp">@Html.DisplayNameFor(m => m.ICPMIDTypeList)</dt>
                    <dd class="sf-2inp s2i-2">
                        <label class="def-select s2i-item">
                            @Html.DropDownListFor(m => m.ICPMIDType, Model.ICPMIDTypeList)
                        </label>
                        @Html.TextBoxFor(m => m.ICPMID, new { @class = "s2i-item", maxlength = 16 })
                    </dd>
                </dl>
                <dl>
                    <dt class="oneline-inp">@Html.DisplayNameFor(m => m.TradeNoTypeList)</dt>
                    <dd class="sf-2inp">
                        <label class="def-select s2i-item">
                            @Html.DropDownListFor(m => m.TradeNoType, Model.TradeNoTypeList)
                        </label>
                        @Html.TextBoxFor(m => m.TradeNo, new { @class = "s2i-item", maxlength = 50 })
                    </dd>
                </dl>
                <dl>
                    <dt class="oneline-inp">@Html.DisplayNameFor(m => m.AllocateStatusList)</dt>
                    <dd>
                        <label class="def-select">
                            @Html.DropDownListFor(m => m.AllocateStatus, Model.AllocateStatusList)
                        </label>
                    </dd>
                </dl>
                <dl>
                    <dt class="oneline-inp">@Html.DisplayNameFor(m => m.PaymentStatusList)</dt>
                    <dd>
                        <label class="def-select">
                            @Html.DropDownListFor(m => m.PaymentStatus, Model.PaymentStatusList)
                        </label>
                    </dd>
                </dl>
                <dl>
                    <dt class="oneline-inp">@Html.DisplayNameFor(m => m.PaymentTypeList)</dt>
                    <dd>
                        <label class="def-select">
                            @Html.DropDownListFor(m => m.PaymentType, Model.PaymentTypeList)
                        </label>
                    </dd>
                </dl>
                <dl>
                    <dt class="oneline-inp">@Html.DisplayNameFor(m => m.TradeStatusList)</dt>
                    <dd>
                        <label class="def-select">
                            @Html.DropDownListFor(m => m.TradeStatus, Model.TradeStatusList)
                        </label>
                    </dd>
                </dl>
                <dl>
                    <dt class="oneline-inp">@Html.DisplayNameFor(m => m.PlatformID)</dt>
                    <dd>
                        @Html.TextBoxFor(m => m.PlatformID, new { maxlength = 10 })
                    </dd>
                </dl>
            </div>

            <div class="btn-box">
                <a id="lnkQuery" href="javascript:;" class="btn" title="查詢">查詢</a>
                <a id="lnkReset" href="javascript:;" class="btn btn-blue-border" title="清除條件">清除條件</a>
            </div>
        }
    </div>

<div id="queryResult">
</div>

@section scripts {
    <script src="~/Areas/Admin/Scripts/Finance/TradeDetail/action.js"></script>
}
