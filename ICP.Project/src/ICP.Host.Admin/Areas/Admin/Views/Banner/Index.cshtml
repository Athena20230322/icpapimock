@using ICP.Modules.Mvc.Admin.Models.Banner;
@model QryBannerVM
@section header{
    <link href="~/Areas/Admin/Content/css/ad.css" rel="stylesheet" />
}

<div class="sc-box no-edge">
    @using (Ajax.BeginForm("Query", new AjaxOptions { UpdateTargetId = "queryResult" }))
    {
        <div class="scb-form sf-2column">
            <dl>
                <dt class="oneline-inp">@Html.DisplayNameFor(m => m.BannerStatusList)</dt>
                <dd>
                    <label class="def-select">
                        @Html.DropDownListFor(m => m.BannerStatus, Model.BannerStatusList, "請選擇欲查詢的狀態")
                    </label>
                </dd>
            </dl>
            <dl>
                <dt class="oneline-inp">@Html.DisplayNameFor(m => m.StartDate)</dt>
                <dd class="sbf-date-box">
                    <label class="sdb-item sdb-date">
                        @Html.TextBoxFor(m => m.StartDate, new { @class = "flatpickr flatpickr-input active minD", placeholder = "起始日期", @readonly = "readonly" })
                    </label>
                    <span class="sdb-txt">至</span>
                    <label class="sdb-item sdb-date">
                        @Html.TextBoxFor(m => m.EndDate, new { @class = "flatpickr flatpickr-input active maxD", placeholder = "結束日期", @readonly = "readonly" })
                    </label>
                </dd>
            </dl>
        </div>
        <div class="btn-box">
            <a href="javascript:query();" class="btn" title="查詢">查詢</a>
            <a href="javascript:reset();" class="btn btn-blue-border" title="清除條件">清除條件</a>
            <input type="submit" id="btnQuery" value="query" style="display:none;" />
        </div>
    }
</div>

<div class="sc-function">
    <div class="btn-box">
        <a href="@Url.Action("AddBanner")" class="btn bd-rdi" title="新增廣告">
            <span class="icon-ic-add bb-icon"></span>
            新增廣告
        </a>
    </div>
</div>

<div id="queryResult">
</div>

@section scripts{
    <script src="~/Areas/Admin/Scripts/Banner/Index/action.js"></script>
}