@{
    ViewBag.Title = "約定連結帳戶綁定結果";
    Layout = "~/Areas/Member/Views/Shared/_ACLinkChinaTrustLayout.cshtml";
}

@using (Ajax.BeginForm("ChinaTrustACLinkInfoConfirm", "ACLink", FormMethod.Post, new AjaxOptions { UpdateTargetId = "ResultData" }, new { Id = "turmsPage" }))
{
    <div id="wrapper">
        <header></header>
        <section>
            <div class="binding">
                @if (ViewBag.Success == "Y")
                {
                    <div class="icon">
                        <img src="@Url.Content("~/Content/pass.png")" />
                    </div>
                    <div class="bin_h1 green">綁定成功</div>
                    <span>@ViewBag.RtnMsg</span>
                }
                else
                {
                    <div class="icon">
                        <img src="@Url.Content("~/Content/fail.png")" />
                    </div>
                    <div class="bin_h1 red">綁定失敗</div>
                    <span>@ViewBag.RtnMsg</span>
                }
            </div>

            <div class="btn_bottom">
                @if (ViewBag.Mode == 0)
                {
                    <a href="javascript:void(0)" class="btn_txt" onclick="iCashJSContext.call('CompleteAddACL')">闗&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;閉</a>
                }
                else
                {
                    <a href="javascript:void(0)" class="btn_txt" onclick="iCashJSContext.openOpenPoint()">闗&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;閉</a>
                }
            </div>
        </section>
        <footer></footer>
    </div>
}
<script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/device.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/action.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/icashjscontext.js")" type="text/javascript"></script>
<script type="text/javascript">
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.async = true;
        js.src = "@Url.Content("~/Scripts/icashjscontext.js")";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'icash-JSContext'));
</script>